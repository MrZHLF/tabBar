.container{
  width: 100%;
  z-index: 0
}
.container .item {
  width: 100%;
  height: 100rpx;
  display: block
}
.box{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background: red;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: yellow;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}